<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="7dp"
    app:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/past_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#e6fa00"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView
            android:layout_below="@id/past_order_title"
            android:id="@+id/past_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/past_order_time"
            android:layout_below="@id/past_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/past_order_price"
            android:layout_below="@id/past_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="16sp"
            android:padding="10dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>